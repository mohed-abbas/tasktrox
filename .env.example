# ===========================================
# Tasktrox Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values

# Application
NODE_ENV=development
APP_NAME=Tasktrox
APP_URL=http://localhost:3000
API_URL=http://localhost:4000

# Database (PostgreSQL)
DATABASE_URL=postgresql://tasktrox:tasktrox_secret@localhost:5432/tasktrox_dev?schema=public

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# OAuth - Google (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:4000/api/v1/auth/google/callback

# OAuth - Apple (optional)
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=
APPLE_CALLBACK_URL=http://localhost:4000/api/v1/auth/apple/callback

# File Storage - Cloudflare R2 (optional - for attachments)
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=tasktrox-files
R2_PUBLIC_URL=

# Email (optional - for password reset)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@tasktrox.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
